<%-include("partials/Header.ejs")%>

    <div class="container">
        <div class="row">
            <div class="col-sm-5 mt-5">
                <h2 class="alert alert-success text-centre">Add New Student</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="name">

                        <label for="Age" class="form-label">Age</label>
                        <input type="text" class="form-control" name="age" id="age">

                        <label for="Fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" name="name" id="name">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-sm-5 mt-5">
                <h2 class="alert alert-danger text-centre">List of Students</h2>

                <%#  Shoow   All Dataa %>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Fees</th>
                            <th scope="col">Action</th>
                        </tr>
                        <tbody>
                            <%var i=1%>
                            <%data.forEach((item)=>{

                                <tr>
                                    <td><%=i++%></td>
                                    <td><%=item.name%></td>
                                    <td><%=item.age%></td>
                                    <td><%=item.fees%></td>
                                    <td>
                                        <form action="/student/edit/<%=item._id%>" method="get" class="d-inline">
                                            <button type="submit" class="btn"><i class="fas fa-pen-square text-info"></i></button>
                                        </form>
                                        <form action="/student/delete/<%=item._id%>" method="post" class="d-inline">
                                            <button type="submit" class="btn">
                                                <i class="fas fa-trash text-danger"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            })%>
                        </tbody>
                    </thead>

                </table>
            </div>

        </div>
    </div>

    <%-include("partials/Footer.ejs")%>